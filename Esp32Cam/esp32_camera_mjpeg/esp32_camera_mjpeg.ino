  Serial.print("Tamaño de la imagen: ");
  Serial.println(imageSize);
  Serial.println("Primeros 10 bytes de la imagen:");
  for (int i = 0; i < 10; i++) {
    Serial.print(imageData[i], HEX);
    Serial.print(" ");
  }
  Serial.println();
}

void reconnect() {
  while (!client.connected()) {
    Serial.print("Intentando conexión a MQTT...");
    if (client.connect("ESP32Client2", mqtt_username, mqtt_password)) {
      Serial.println("conectado");
      if (client.subscribe(mqtt_topic)) {
        Serial.print("Subscrito al topic ");
        Serial.println(mqtt_topic);
      } else {
        Serial.println("Error al suscribirse al topic");
      }
      client.setCallback(callback);
    } else {
      Serial.print("falló, rc=");
      Serial.print(client.state());
      Serial.println(" intentando de nuevo en 1 segundos");
      delay(1000);
    }
  }
}

void loop() {
  if(!client.connected())
  {
    reconnect();
  }

  client.loop();
}
