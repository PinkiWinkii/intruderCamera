void capture_photo() {
  // Capturar foto con la cámara
  cam.run();
  const uint8_t *imageData = cam.getfb();
  size_t imageSize = cam.getSize();
  
  // Aquí puedes enviar la foto a través de MQTT, guardarla en el sistema de archivos, etc.
